<p id="notice"><%= notice %></p>

<h1>Holding Methods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holding_methods.each do |holding_method| %>
      <tr>
        <td><%= holding_method.name %></td>
        <td><%= link_to 'Show', holding_method %></td>
        <td><%= link_to 'Edit', edit_holding_method_path(holding_method) %></td>
        <td><%= link_to 'Destroy', holding_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holding Method', new_holding_method_path %>
